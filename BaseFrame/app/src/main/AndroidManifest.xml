<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hgw.baseframe">

    <!-- *********************应用权限部分********************* -->
    <!-- 访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 写内部储存卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读内部储存卡权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 调用系统相机拍照权限 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 读取网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.hgw.baseframe.app.BaseFrameApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_512"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:theme="@style/AppTheme">

        <!--适配全面屏（配合android:resizeableActivity="true"）-->
        <meta-data android:name="android.max_aspect"
            android:value="2.1"/>

        <activity android:name=".ui.main.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--登录-->
        <activity android:name="com.hgw.baseframe.ui.login.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:launchMode="singleTask"/>
        <!--忘记密码-->
        <activity android:name="com.hgw.baseframe.ui.login.ForgetPasswordActivity"/>
        <!--首页-->
        <activity android:name="com.hgw.baseframe.ui.main.MainActivity"/>
        <!--http-->
        <activity android:name="com.hgw.baseframe.ui.http.HttpActivity"/>
        <!--okhttp-->
        <activity android:name="com.hgw.baseframe.ui.http.okhttp.OkhttpActivity"/>
        <!--Retrofit-->
        <activity android:name="com.hgw.baseframe.ui.http.retrofit.RetrofitActivity"/>
        <activity android:name="com.hgw.baseframe.ui.main.GuideActivity"/>
    </application>

</manifest>