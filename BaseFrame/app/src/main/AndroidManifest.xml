<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hgw.baseframe">

    <application
        android:name="com.hgw.baseframe.app.BaseFrameApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:theme="@style/StatusBarTranslucentTheme">

        <!--适配全面屏（配合android:resizeableActivity="true"）-->
        <meta-data android:name="android.max_aspect"
            android:value="2.1"/>

        <activity android:name=".ui.main.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hgw.baseframe.ui.main.activity.MainActivity"/>
        <activity android:name="com.hgw.baseframe.ui.main.activity.RetrofitActivity"/>
        <activity android:name="com.hgw.baseframe.ui.main.activity.GuideActivity"/>
    </application>

    <!-- *********************应用权限部分********************* -->
    <!-- 访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 写内部储存卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读内部储存卡权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 调用系统相机拍照权限 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 读取网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>