<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hgw.baseframe">

    <!-- *********************应用权限部分********************* -->
    <!-- 访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 写内部储存卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读内部储存卡权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 调用系统相机拍照权限 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 读取网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许安装apk权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <application
        android:name="com.hgw.baseframe.app.BaseFrameApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_512"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:theme="@style/AppTheme">

        <!--适配全面屏（配合android:resizeableActivity="true"）-->
        <meta-data android:name="android.max_aspect"
            android:value="2.1"/>

        <!--APP更新服务 start -->
        <service android:enabled="true" android:name="com.hgw.baseframe.service.FileDownLoadService"/>
        <!--解决 Android N(7.0) 上 安装Apk时报错-->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.hgw.baseframe.fileProvider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!--APP更新服务 end -->

        <activity android:name=".ui.main.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--登录-->
        <activity android:name="com.hgw.baseframe.ui.login.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:launchMode="singleTask"/>
        <!--忘记密码-->
        <activity android:name="com.hgw.baseframe.ui.login.ForgetPasswordActivity"/>
        <!--首页-->
        <activity android:name="com.hgw.baseframe.ui.main.MainActivity"/>
        <!--网络框架-->
        <activity android:name=".ui.basemodule.http.HttpActivity"/>
        <!--okhttp-->
        <activity android:name=".ui.basemodule.http.okhttp.OkhttpActivity"/>
        <!--Retrofit-->
        <activity android:name=".ui.basemodule.http.retrofit.RetrofitActivity"/>
        <!--刷新、加载更多框架-->
        <activity android:name=".ui.basemodule.refreshandloadmore.RefreshAndLoadMoreActivity"/>
        <!--自定义XRecyclerView-->
        <activity android:name=".ui.basemodule.refreshandloadmore.xrecyclerview.CustomXRecyclerViewActivity"/>

        <activity android:name="com.hgw.baseframe.ui.main.GuideActivity"/>
    </application>

</manifest>